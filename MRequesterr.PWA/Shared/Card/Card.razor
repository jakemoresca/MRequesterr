
    <div class="card shadow-sm text-white bg-dark" style="height: 290px">       
        @if (ImageUrl?.Length > 0)
        {
            <img src="@ImageUrl" class="card-img-top align-self-center" alt="@Title" style="width: auto; height: 290px">
        }
        else
        {
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"
                role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <title>@Title</title>
                <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">@Title</text>
            </svg>
        }

        <div class="card-body">
            <p class="card-text">@Title - @Overview</p>
            <p class="card-text">Released Status: @ReleasedStatus</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a class="btn btn-outline-primary" role="button">View</a>
                </div>
            </div>
        </div>
    </div>


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Overview { get; set; }

    [Parameter]
    public string ReleasedStatus { get; set; }

    [Parameter]
    public string? ImageUrl { get; set; }
}